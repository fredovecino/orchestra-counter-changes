<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Counter</title>
    {% include "partials/external_links.nunjucks" %}
</head>

<!-- Imported partials -->
{% import "partials/button.nunjucks" as button  %}

<body>
    <div class="qm-app">
        <!-- Qmatic Header -->
        <header class="qm-header">

        </header>


        <!-- Qmatic Main -->
        <main class="qm-main">

            <!-- Qmatic Main Left -->
            <div class="qm-main__left">
                <div class="qm-card-layout">
                    {% include "partials/visit-card.nunjucks" %}
                </div>

                <!-- Qmatic Action Bar -->
                <div class="qm-action-bar">

                </div>
            </div>


            <!-- Qmatic Main Right -->
            <div class="qm-main__right">

                {{button.render(null, 'qm-btn--primary')}}
            
            </div>
        </main>
        <footer class="qm-footer">
            <div class="qm-footer__content">
                <p class="qm-footer__text">Powered by Qmatic</p>
            </div>
        </footer>
    </div>

    {% include "partials/previous_counter.nunjucks" %}



    <script type="text/javascript">
            $(document).ready(function() {
                // If we ever, ever, end up with a 401, we are either timedout due to inactivity
                // or just plain evil. Anyway we should be logged out.
                $.ajaxSetup( {
                    cache : false,
                    statusCode : {
                        401: function() {
                            location.href = "/logout.jsp";
                        }
                    }
                });

                init.init();
			});
        </script>   

</body>

</html>